{
  "version": 8,
  "name": "Basic Ultra Simple",
  "metadata": {},
  "sources": {
    "basic-source": {
      "type": "vector",
      "tiles": [
        "https://tiles.dbark.io/{z}/{x}/{y}.pbf"
      ]
    }
  },
  "glyphs": "https://orangemug.github.io/font-glyphs/glyphs/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f9fa"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "basic-source",
      "source-layer": "water",
      "paint": {
        "fill-color": "#a5d6f1"
      }
    },
    {
      "id": "parks",
      "type": "fill",
      "source": "basic-source",
      "source-layer": "landcover",
      "filter": ["==", "class", "grass"],
      "paint": {
        "fill-color": "#dbeebf",
        "fill-opacity": 0.4
      }
    },
    {
      "id": "roads-minor",
      "type": "line",
      "source": "basic-source",
      "source-layer": "transportation",
      "minzoom": 12,
      "filter": ["in", "class", "minor", "street", "service"],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#d1d5db",
        "line-width": 1
      }
    },
    {
      "id": "roads-major",
      "type": "line",
      "source": "basic-source",
      "source-layer": "transportation",
      "filter": ["in", "class", "motorway", "trunk", "primary", "secondary", "tertiary"],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#9ca3af",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          5, 0.5,
          12, 2,
          18, 10
        ]
      }
    },
    {
      "id": "place-names",
      "type": "symbol",
      "source": "basic-source",
      "source-layer": "place",
      "layout": {
        "text-field": "{name}",
        "text-font": ["Open Sans Regular"],
        "text-size": 14,
        "text-max-width": 8
      },
      "paint": {
        "text-color": "#4b5563",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "street-names",
      "type": "symbol",
      "source": "basic-source",
      "source-layer": "transportation_name",
      "minzoom": 14,
      "layout": {
        "text-field": "{name}",
        "text-font": ["Open Sans Regular"],
        "text-size": 12,
        "symbol-placement": "line"
      },
      "paint": {
        "text-color": "#6b7280",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.5
      }
    }
  ],
  "id": "basic-style"
}
